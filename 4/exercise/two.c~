#include <stdio.h>
#include <string.h>
#define SIZE 20

int main(void)
{
    char firstname[SIZE];
    char lastname[SIZE];
    int i;

    printf("Enter Your Firstname, please: ");
    printf(" $________\b\b\b\b\b\b\b\b");
    scanf("%s", firstname);
    printf("Enter Your Lastname, please: ");
    printf(" $________\b\b\b\b\b\b\b\b");
    scanf("%s", lastname);
    printf("a.\"%s %s\"\n",lastname,firstname);
    i = 20 - strlen(firstname) - strlen(lastname) - 1;
    printf("%*s %s\n", i, lastname, firstname);

    return 0;
}
